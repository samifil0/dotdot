@using PlayerAgentManagement.BL.Domain
@model NewPlayerViewModel

@{
    ViewBag.Title = "Add Player";
    Layout = "_Layout";
}

<h2>Add Player</h2>

<form asp-controller="Player" asp-action="Add" method="post">
    <div class="mb-3 row">
        <label class="col-sm-2 form-label" asp-for="Name"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="mb-3 row">
        <label class="col-sm-2 form-label" asp-for="BirthDate"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="BirthDate">
                    <span asp-validation-for="BirthDate" class="text-danger"></span>
        </div>
    </div>
    <div class="mb-3 row">
        <label class="col-sm-2 form-label" asp-for="Position"></label>
        <div class="col-sm-10">
        <select class="form-control" asp-for="Position" asp-items="Html.GetEnumSelectList<Position>()" name="Position"></select>
        </div>
    </div>
    <div class="mb-3 row">
        <label class="col-sm-2 form-label" asp-for="Salary"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Salary">
                    <span asp-validation-for="Salary" class="text-danger"></span>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Add</button>
</form>

@section Scripts
{
    <partial name="_ValidationScriptsPartial"/>
}
