@model PlayerAgentManagement.BL.Domain.Team

@{
    ViewBag.Title = "Team details";
    Layout = "_Layout";
}

<h2>Team details</h2>

<section class="my-3">
    <div class="mb-3 row">
        <label for="name-label" class="col-sm-2 fw-bold">Name</label>
        <span id="name-label" class="col-sm-10">@Model.Name</span>
    </div>
    <div class="mb-3 row">
        <label for="founded-label" class="col-sm-2 fw-bold">Founded</label>
        <span id="founded-label" class="col-sm-10">@Model.Founded.ToShortDateString()</span>
    </div>
<div class="mb-3 row">
    <label for="country-label" class="col-sm-2 fw-bold">Country</label>
    <span id="country-label" class="col-sm-10">@Model.Country</span>
</div>
</section>

<h2>Players of @Model.Name</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Salary</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var contract in Model.Contracts)
        {
            <tr>
                <td>@contract.Player.Name</td>
                <td>@contract.StartDate.ToShortDateString()</td>
                <td>@contract.EndDate.ToShortDateString()</td>
                <td>@contract.Player.Salary</td>
            </tr>
        }
    </tbody>
    
    <tbody id="teamTableBody"></tbody>
</table>

<h4 class="pb-1 pt-3">Add a new player</h4>

<form>
<div class="mb-3 row">
<label for="playerSelect">Player</label>
<div class="col-sm-10">
    <select id="playerSelect" class="form-select">
    </select>
</div>
</div>
<div class="mb-3 row">
    <label for="startDate" class="col-sm-2 form-label">StartDate</label>
    <div class="col-sm-10">
        <input id="startDate" type="date" class="form-control">
    </div>
</div>
<div class="mb-3 row">
    <label for="endDate" class="col-sm-2 form-label">endDate</label>
    <div class="col-sm-10">
        <input id="endDate" type="date" class="form-control">
    </div>
</div>
<div class="mb-3 row">
    <label for="salary" class="col-sm-2 form-label">Salary</label>
    <div class="col-sm-10">
        <input id="salary" type="number" class="form-control">
    </div>
</div>
<button id="addButton" type="button" class="btn btn-primary">Add</button>
</form>

<script src="~/js/team/details.js" defer></script>